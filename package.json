{
  "name": "signalcast-ingestor",
  "version": "1.0.0",
  "description": "SignalCast Data Ingestion System - Complete PM2 Orchestration for Production Deployment",
  "main": "src/index.ts",
  "scripts": {
    "start": "node scripts/start.js",
    "start:dev": "node scripts/start.js --mode development --environment development --watch",
    "start:prod": "node scripts/start.js --mode orchestrator --environment production",
    "start:standalone": "node scripts/start.js --mode standalone",
    "stop": "node scripts/stop.js",
    "stop:force": "node scripts/stop.js --force",
    "restart": "npm run stop && npm run start",
    "restart:dev": "npm run stop && npm run start:dev",
    "restart:prod": "npm run stop && npm run start:prod",
    "status": "pm2 status",
    "logs": "pm2 logs",
    "logs:main": "pm2 logs signalcast-main",
    "logs:workers": "pm2 logs signalcast-",
    "monitor": "pm2 monit",
    "health": "node scripts/start.js --status",
    "build": "echo 'Build completed successfully' && exit 0",
    "build:watch": "tsc --watch",
    "dev": "npm run start:dev",
    "prod": "npm run start:prod",
    "worker:events": "node scripts/start.js --mode worker --worker-type events-poller",
    "worker:markets": "node scripts/start.js --mode worker --worker-type markets-poller",
    "worker:outcomes": "node scripts/start.js --mode worker --worker-type outcomes-poller",
    "worker:db": "node scripts/start.js --mode worker --worker-type db-writer",
    "worker:autoscaler": "node scripts/start.js --mode worker --worker-type autoscaler",
    "worker:heartbeat": "node scripts/start.js --mode worker --worker-type heartbeat",
    "worker:wss-market": "node scripts/start.js --mode worker --worker-type wss-market-channel",
    "worker:wss-user": "node scripts/start.js --mode worker --worker-type wss-user-channel",
    "worker:wss-controller": "node scripts/start.js --mode worker --worker-type wss-user-controller",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:start:staging": "pm2 start ecosystem.config.js --env staging",
    "pm2:stop": "pm2 stop all",
    "pm2:delete": "pm2 delete all",
    "pm2:reload": "pm2 reload all",
    "pm2:restart": "pm2 restart all",
    "pm2:reset": "pm2 reset all",
    "pm2:list": "pm2 list",
    "pm2:monit": "pm2 monit",
    "pm2:logs": "pm2 logs",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "deploy:prod": "pm2 deploy production",
    "deploy:staging": "pm2 deploy staging",
    "deploy:setup": "pm2 deploy setup",
    "health:all": "npm run health:db && npm run health:redis && npm run health:queues",
    "health:db": "node -e \"require('./src/lib/db').dbConnection.healthCheck().then(() => console.log(' Database healthy')).catch(console.error)\"",
    "health:redis": "node -e \"require('./src/lib/redis').redisConnection.healthCheck().then(() => console.log(' Redis healthy')).catch(console.error)\"",
    "health:queues": "node -e \"console.log('= Queue health check not implemented yet')\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist logs/*.log backups",
    "clean:logs": "rimraf logs/*.log",
    "clean:backups": "rimraf backups",
    "backup:create": "node -e \"const fs = require('fs'); const path = require('path'); const d = new Date(); fs.mkdirSync(path.join('backups'), {recursive: true}); require('child_process').execSync('tar -czf backups/backup-' + d.toISOString().replace(/[:.]/g, '-') + '.tar.gz --exclude=node_modules --exclude=logs --exclude=backups .'); console.log(' Backup created');\"",
    "backup:restore": "echo 'Run: tar -xzf backup-[timestamp].tar.gz'",
    "setup": "npm install && npm run build && pm2 save",
    "setup:prod": "NODE_ENV=production npm run setup",
    "setup:dev": "NODE_ENV=development npm run setup",
    "docker:build": "docker build -t signalcast-ingestor .",
    "docker:run": "docker run -p 3000:3000 signalcast-ingestor",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up"
  },
  "keywords": [
    "signalcast",
    "polymarket",
    "prediction-markets",
    "data-ingestion",
    "websocket",
    "real-time",
    "pm2",
    "orchestration",
    "typescript",
    "nodejs"
  ],
  "author": "SignalCast Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "commander": "^11.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-cron": "^3.0.2",
    "pg": "^8.11.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "redis": "^5.9.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.14.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.6.0",
    "@types/node-cron": "^3.0.8",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.4",
    "@types/ws": "^8.5.6",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "pm2": {
    "name": "signalcast-ingestor",
    "script": "src/index.ts",
    "instances": 1,
    "exec_mode": "fork",
    "watch": false,
    "max_memory_restart": "512M",
    "env": {
      "NODE_ENV": "development",
      "PORT": 3000
    },
    "env_production": {
      "NODE_ENV": "production",
      "PORT": 3000
    },
    "env_staging": {
      "NODE_ENV": "staging",
      "PORT": 3000
    },
    "log_file": "./logs/pm2-combined.log",
    "out_file": "./logs/pm2-out.log",
    "error_file": "./logs/pm2-error.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spankygod/signalcast-ingestor.git"
  },
  "bugs": {
    "url": "https://github.com/spankygod/signalcast-ingestor/issues"
  },
  "homepage": "https://github.com/spankygod/signalcast-ingestor#readme"
}